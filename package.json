{
  "name": "http4ts",
  "version": "0.0.3",
  "description": "Server as a Function http toolkit for Typescript",
  "main": "dist/src/node/index.js",
  "types": "dist/src/node/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts src/** && prettier src/** --check",
    "lint-fix": "eslint --ext .ts --fix src/** && prettier src/** --write",
    "node-example": "nodemon",
    "node-example-client": "ts-node --project tsconfig.json ./src/examples/simple-node-client.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "test": "jest",
    "tdd": "jest --watchAll",
    "test-ci": "jest --ci --coverage",
    "prepare": "npm run build",
    "deno-example": "npm run deno-prebuild-core && deno --allow-net src/deno/examples/example.ts",
    "deno-example-client": "npm run deno-prebuild-core && deno --allow-net src/deno/examples/example-client.ts",
    "deno-prebuild-core": "deno run --allow-read --allow-write src/deno/scripts/deno-prebuild.ts --in src/core --out src/deno/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/http4ts/http4ts.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/http4ts/http4ts/issues"
  },
  "homepage": "https://github.com/http4ts/http4ts#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.29",
    "@types/request-promise": "^4.1.45",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "request-promise": "^4.2.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "./src",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/deno/"
    ],
    "coverageDirectory": "../coverage",
    "setupFiles": [
      "<rootDir>../jest/setup.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-parameter-properties": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-inferrable-types": 0
    }
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
